
<div class="row">       
    <div class="col-xs-12 col-md-12 col-lg-12 vcenter">
        <div style="height:.1em;border:1px solid #Fff">        		
        	<div id="bootstrap-overrides">					
				    <div class="panel panel-default">
				      <div class="panel-heading">
				        <h2><strong>Sign In</strong></h2>
				      </div>
				      
				      <div class= "panel-body">
								<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
								  <div class="form-inputs">
								  	<div class="form-group">
								    	<%= f.input :email, required: false, autofocus: true, class: "form-control" %>
								    </div>
								    <div class="form-group">
								    	<%= f.input :password, required: false, class: "form-control" %>
								    </div>
								    	<%if devise_mapping.rememberable? %>
								    		<div class="form-group">
								    			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
								    		</div>
								    	<% end -%>
									</div>

								  <div class="form-actions">
								    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
								  </div>
								<% end %>

								<%= render "devise/shared/links" %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
